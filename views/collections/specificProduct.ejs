
<section id="product1" class="section-p1">
    <h2>
        <%- productName %>
    </h2>
    <p>Latests <%- productName %> brands available</p>
       <p><button>view cart</button></p>

 <div class="itemsContainer">
    <% products.forEach(data=> { %>

        <div class="pro-container-sub">
            <!-- ///////////product 1///////////// -->
          <a href="/store/item/<%=data._id%>">  
            <div class="pro">
                <img src="<%= data.ImagesPath%>\<%=data.mainImg%>" alt="">
                <div class="des">
                    <span>
                        <strong><%= data.category %></strong> <i><%=data.brandName %></i>
                    </span>
                
                    <h5>
                        <strong>Quantity:</strong><%=data.quantity %>
                    </h5>
                       
                    <h3>
                        K<%= data.price%>
                    </h3>
                </div>
                <i class="fa fa-shopping-cart cart"></i>
            </div>
           </a>
         </div>       

            <% }) %>
 </div>

</section>
<style>
    .itemsContainer{
        width: 100%;
        padding: 10%;
        display: grid;
        justify-content: center;
        align-items: center;
        grid-gap: 10px;
        grid: auto / auto auto  ;
    }
    .pro-container-sub{
        width: fit-content;
        margin: 2%;
    }
    
    .pro img{
        height: 40vh;
    }
    @media (max-width: 799px) {
        .pro-container-sub{
            width: fit-content;
            margin: 2%;
        }
        .pro img{
            height: 20vh;
        }
    }
    @media (max-width: 477px) {
            .itemsContainer{
                grid: auto / auto  ;
            }
            .pro-container-sub{
                width: fit-content;
                margin: 2%;
            }
            .pro img{
                height: 25vh;
            }
    }

</style>
